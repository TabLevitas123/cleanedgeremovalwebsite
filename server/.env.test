# Clean Edge Removal API - Test Environment Variables

# Server Configuration
PORT=3001
HOST=localhost
NODE_ENV=test
API_PREFIX=/api
CORS_ORIGIN=http://localhost:3000
TRUST_PROXY=false

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=clean_edge_test
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false
DB_POOL_MIN=1
DB_POOL_MAX=5
DB_DEBUG=false

# Authentication
JWT_SECRET=test_jwt_secret_key
JWT_EXPIRES_IN=3600
JWT_REFRESH_SECRET=test_jwt_refresh_secret_key
JWT_REFRESH_EXPIRES_IN=86400
BCRYPT_SALT_ROUNDS=4
SESSION_SECRET=test_session_secret_key
SESSION_NAME=clean_edge_session_test
SESSION_MAX_AGE=3600000

# Email Service
EMAIL_PROVIDER=mock
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM_ADDRESS=noreply@cleanedgeremoval.com
EMAIL_FROM_NAME=Clean Edge Removal (Test)
EMAIL_CONTACT_ADDRESS=contact@cleanedgeremoval.com

# IONOS Integration
IONOS_API_URL=https://api.ionos.com
IONOS_API_KEY=test-ionos-api-key
IONOS_API_SECRET=test-ionos-api-secret

# Stripe Integration (for payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_test_key
STRIPE_WEBHOOK_SECRET=whsec_test_your_stripe_webhook_secret
STRIPE_PRICE_ID_BASIC=price_test_basic_id
STRIPE_PRICE_ID_STANDARD=price_test_standard_id
STRIPE_PRICE_ID_PREMIUM=price_test_premium_id

# Google Maps API (for location services)
GOOGLE_MAPS_API_KEY=test-google-maps-api-key

# Logging
LOG_LEVEL=error
LOG_FORMAT=test
LOG_DIR=logs
LOG_MAX_SIZE=5m
LOG_MAX_FILES=1
ENABLE_REQUEST_LOGGING=false
ENABLE_RESPONSE_LOGGING=false
ENABLE_DB_QUERY_LOGGING=false

# File Storage
UPLOAD_DIR=uploads/test
MAX_FILE_SIZE=1048576
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_TRUSTED=true

# Cache
CACHE_ENABLED=false
CACHE_TTL=60
CACHE_CHECK_PERIOD=30

# Security
ENABLE_HELMET=true
ENABLE_XSS_PROTECTION=true
ENABLE_CONTENT_TYPE_OPTIONS=true
ENABLE_FRAME_OPTIONS=true
ENABLE_CSRF=false
CSRF_SECRET=test_csrf_secret_key
CSRF_COOKIE_NAME=_csrf_test

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_END_TIME=
MAINTENANCE_MESSAGE=

# Monitoring
ENABLE_PERFORMANCE_MONITORING=false
ENABLE_ERROR_TRACKING=false

# Test-specific
ENABLE_SWAGGER=false
ENABLE_GRAPHQL_PLAYGROUND=false
MOCK_EXTERNAL_SERVICES=true
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=Test123!
TEST_ADMIN_EMAIL=admin@example.com
TEST_ADMIN_PASSWORD=Admin123!